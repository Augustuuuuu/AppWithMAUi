<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.NovaCaneta"
             Title="Nova Caneta">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>

    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="10" Padding="10">
        
        <Label Text="Fabricante da Caneta:"/>
        <Entry x:Name="txt_Fabricante" />
        
        <Label Text="Cor da Caneta:"/>
        <Entry x:Name="cor_Caneta" />
        
        <Label Text="Preço Unitário:"/>
        <Entry x:Name="preco_Caneta" Keyboard="Numeric" />
        
        
    </VerticalStackLayout>
</ContentPage>