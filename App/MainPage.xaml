<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">


            <Label Text= "Nome da Caneta:" />
            <Entry x:Name="txt_Caneta" />
            
            <Label Text= "Preço da Caneta:" />
            <Entry x:Name="txt_Preco" Placeholder="R$ "/>

            <Label Text= "Cor da Caneta:" />
            <Entry x:Name="cor_Caneta" />

            <Button Text="Adicionar caneta" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
